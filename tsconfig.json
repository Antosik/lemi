{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2017",

    "removeComments": true,
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,

    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strict": true,
    
    "outDir": "./dist",
    "baseUrl": "./src"
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    // "node_modules"
  ]
}
