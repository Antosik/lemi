{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",

    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "noImplicitAny": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noLib": false,
    "removeComments": true,
    "sourceMap": true,
    
    "outDir": "./dist",
    "baseUrl": "./src"
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
